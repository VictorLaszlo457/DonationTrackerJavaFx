<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.Controller.LoginActivity"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text text="Welcome"
          GridPane.columnIndex="4" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <HBox spacing="0" alignment="bottom_right"
          GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button fx:id="login" text="Login"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <HBox spacing="30" alignment="bottom_right"
          GridPane.columnIndex="10" GridPane.rowIndex="4">
        <Button fx:id="registration" text="Registration"
                onAction="#handleRegistrationButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="10" GridPane.rowIndex="5"/>

</GridPane>
